pipeline {
  agent any

  stages {
    stage('Build') {
      steps { echo 'Stage 1: Build with Maven/npm' }
    }
    stage('Unit and Integration Tests') {
      steps { 
        echo 'Stage 2: Run Jest/JUnit tests'
      }
    }

    stage('Code Analysis') {
      steps {
        echo 'Stage 3: Run SonarQube/SonarCloud'
      }
    }

    stage('Security Scan') {
      steps {
        echo 'Stage 4: Run npm audit or Snyk'
      }
    }

    stage('Deploy to Staging') {
      steps { 
        echo 'Stage 5: Deploy to staging (e.g. AWS EC2)'
      }
    }

    stage('Integration Tests on Staging') {
      steps {
        echo 'Stage 6: Run Selenium/Cypress tests'
      }
    }

    stage('Deploy to Production') {
      steps {
        echo 'Stage 7: Deploy to production servers'
      }
    }

  }
}

